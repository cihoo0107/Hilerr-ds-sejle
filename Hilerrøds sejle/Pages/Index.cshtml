@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex flex-column gap-3 container">
    <div class="d-flex flex-row gap-2 container">
        <div class="frontpage-image-container">
            <img src="images/frontpage.png" class="frontpage-image rounded" alt="logo">
        </div>
        <div class="container d-flex flex-column gap-2 px-3">
            <h1 class="heading"><span class="badge bg-secondary">Welcome</span></h1>
            <p class="frontpage-text">Catch the Wind, Find Your Freedom.</p> 
        </div>
    </div>

<h2 class="heading2"><span class="badge bg-secondary">Employess</span></h2>

<div class="d-flex flex-row gap-3 justify-content-between">

  <div class="card" style="width: 18rem;">
    <img src="images/ansat1.png" class="card-img-top" alt="ceo">
    <div class="card-body">
      <h5 class="card-title">Emma Johnson</h5>
      <p class="card-text">
        Club Director focused on community growth, member engagement, and building a welcoming environment for everyone.
      </p>
      <a href="Medlemmer/Index" class="btn btn-primary">View Profile</a>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <img src="images/ansat2.png" class="card-img-top" alt="operations-manager">
    <div class="card-body">
      <h5 class="card-title">Michael Davis</h5>
      <p class="card-text">
        Operations Manager ensuring day-to-day activities run smoothly while providing excellent support to all members.
      </p>
      <a href="Medlemmer/Index" class="btn btn-primary">View Profile</a>
    </div>
  </div>

  <div class="card" style="width: 18rem;">
    <img src="images/ansat3.png" class="card-img-top" alt="events-coordinator">
    <div class="card-body">
      <h5 class="card-title">Sarah Thompson</h5>
      <p class="card-text">
        Events Coordinator passionate about creating memorable experiences on and off the water for club members.
      </p>
      <a href="Medlemmer/Index" class="btn btn-primary">View Profile</a>
    </div>
  </div>

</div>


</div>

