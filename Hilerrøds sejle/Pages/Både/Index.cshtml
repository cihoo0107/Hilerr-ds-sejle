@page
@model Hilerrøds_sejle.Pages.Både.IndexModel
@{
}

<h1>Både</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Bådnavn</th>
            <th>Bådtype</th>
            <th>Model</th>
            <th>Sejlnummer</th>
            <th>Længde (m)</th>
            <th>Højde (m)</th>
            <th>Byggeår</th>
            <th>Detaljer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var båd in Model.Både)
        {
            <tr>
                <td>@båd.BådNavn</td>
                <td>@båd.BådType</td>
                <td>@båd.Model</td>
                <td>@båd.SejlNummer</td>
                <td>@båd.BådLængde</td>
                <td>@båd.BådHøjde</td>
                <td>@båd.ByggeÅr</td>
                <td>
                    <a asp-page="Slet" asp-route-id="@båd.Id" class="btn btn-sm btn-secondary">Slet </a>
                    <a asp-page="/Både/Rediger" asp-route-id="@båd.Id" class="btn btn-primary btn-sm ms-2">
                        Rediger
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="Både/opret"><button type="submit" class="btn btn-primary">Opret Båd</button></a>

