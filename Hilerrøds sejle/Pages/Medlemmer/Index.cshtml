
@page
@model Hilerrøds_sejle.Pages.Medlemmer.IndexModel
@{
    ViewData["Title"] = "Medlemmer";
}

<h1>Medlemmer</h1>

<p>Her vises vores medlemmer.</p>

@if (TempData["SuccessMessage"] is string msg)
{
    <div class="alert alert-success">
        @msg
    </div>
}

<p>
    <a asp-page="Opret" class="btn btn-primary">Opret nyt medlem</a>
</p> 

<table class="table table-striped">
<thead>
    <tr>
            @*<th>Id</th>*@
            <th>Navn</th>
            <th>Email</th>
            <th>Rolle</th>
            <th>Adresse</th>
            <th>Telefon Nummer</th>
            <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var m in Model.Medlemmer)
        {
            <tr>
                @*<td>@m.Id</td -- behøver ikke at vises*@ 
                <td>@m.Navn</td>
                <td>@m.Email</td>
                <td>@m.Rolle</td>
                <td>@m.Adresse</td>
                <td>@m.TelefonNummer</td>
                <td>
                    <a asp-page="Rediger" asp-route-id="@m.Id" class="btn btn-sm btn-secondary">Rediger </a> @*Edit er ændret til Rediger*@
                    <a asp-page="Slet" asp-route-id="@m.Id" class="btn btn-sm btn-secondary">Slet </a> @*Delete er ændret til Slet*@
                </td>
            </tr>
        }
    </tbody>
</table>
       